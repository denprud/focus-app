{
   "action": {
      "default_icon": {
         "16": "img/favicon-16x16.png",
         "24": "img/alert_24.png",
         "32": "img/favicon-32x32.png"
      },
      "default_popup": "focus.html",
      "default_title": "FOCUS"
   },
   "background": {
      "service_worker": "background.js"
   },
   "description": "FOCUS is an extension that prevents you from procrastinating with different tabs. It's never been easier to stay on task.",
   "icons": {
      "128": "img/alert_128.png",
      "16": "img/favicon-16x16.png",
      "48": "img/alert_48.png"
   },
   "manifest_version": 3,
   "name": "FOCUS - Curb your Procrastination",
   "permissions": [ "scripting", "tabs", "activeTab", "storage", "tabGroups", "offscreen", "notifications"],
   "host_permissions": [
      "<all_urls>"
   ],
   "short_name": "FOCUS",
   "version": "1.0.2",
   "web_accessible_resources": [  
      {
         "resources": ["settings.html"],
         "matches": ["<all_urls>"]
      }
   ]
}